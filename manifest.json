{
    "manifest_version": 3,
    "name": "Spotlight",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "images/logo.png"
        },
        "default_title": "Spotlight is enabled",
        "default_popup": "/web/popup.html"
    },
    "description": "Elevate your productivity by setting timers for focused work and preventing access to distracting websites",
    "background": {
        "service_worker": "/scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "webNavigation",
        "declarativeNetRequest" ,
        "activeTab",
        "scripting",
        "webRequest"
    ],
    "icons": {
        "16": "images/logo.png",
        "48": "images/logo.png"
    }
}
