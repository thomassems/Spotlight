{
    "manifest_version": 3,
    "name": "Productivity Extension",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "images/logo.png"
        },
        "default_title": "Productivity Extension is enabled",
        "default_popup": "popup.html"
    },
    "description": "Blocks access to time wasting websites. When you try to access a specified non-productive website, you're automatically redirected to a meme telling you to get back to work.",
    "background": {
        "service_worker": "./scripts/background.js",
        "type": "module"
    },
    "permissions": [
        "storage",
        "webNavigation",
        "declarativeNetRequest" ,
        "activeTab",
        "scripting"
    ],
    "icons": {
        "16": "images/logo.png",
        "48": "images/logo.png"
    }
}
